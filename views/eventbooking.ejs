<%- include('partials/index-header.ejs') %>


    <!--====== PAGE TITLE PART START ======-->

    <div class="page-title-area bg_cover" style="background: linear-gradient(to right, #FFAE42, #B2BEB5),url(assets/images/about.jpg) no-repeat top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title-content">
                        <h3 class="title">Events</h3>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Events</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!--====== PAGE TITLE PART ENDS ======-->

    <!--====== EVENT DETAILS PART START ======-->
    
    <section class="event-details-area pb-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="event-details-content">
                        <h3 class="title"><%=eventbooking[0].title%></h3>
                        <p><%=eventbooking[0].body%></p>
                        <p class="text">Neque porro quisquam est, qui dolorem ipsum quiaolor sit amet, consectetur, adipisci velit, sed quia non numquam eius modi tempora incidunt ut labore et dolore magnam dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="event-details-thumb">
                        <img src="/assets<%=eventbooking[0].pic%>" style ="width:564px; height:521px;" alt="nothing">
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!--====== EVENT DETAILS PART ENDS ======-->

 
    <section class="write-massage-area pb-120">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="write-massage-content">
                        <div class="write-massage-title">
                            <h3 class="title">Book this event <span style="color:#ff4332;" > Now!</span></h3>
                        </div>
                        <div class="write-massage-input">
                            <form  action="/booking" method="post">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="input-box mt-10">
                                            <input
                                            type="hidden"
                                            name="id"
                                            value="<%=eventbooking[0]._id%>"
                                          />
                                         </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="input-box mt-10">
                                            <input
                                            Required
                                            type="text"
                                            name="fullName"
                                            placeholder ="Full name"
                                          />                                       
                                     </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="input-box mt-10">
                                            <input
                                            Required
                                            type="number"
                                            name="mobile"
                                            placeholder ="Phone number"
                                          />                                        
                                         </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="input-box mt-10">
                                            <input
                                            Required
                                            type="email"
                                            name="email"
                                            placeholder ="email"
                                          />                                        
                                         </div>
                                    </div>
                                  
                                    <div class="col-lg-3">
                                        <div class="input-box mt-10">
                                            <button type="submit" class="main-btn main-btn-2">Book</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="book-a-tour-info">
                        <span>Venue: <%=eventbooking[0].place%></span>
                        <p>If you encounter a problem, call corporate office and we will connect you with a team member who can help.</p>
                        <h3 class="title">777 888 0000</h3>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    
    <!--====== EVENT INFO  PART ENDS ======-->

<%- include('partials/index-footer.ejs') %>