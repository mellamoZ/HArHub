<%- include('partials/header.ejs') %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->

    <%- include('partials/side.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Sidebar Toggle (Topbar) -->
        <button
          id="sidebarToggleTop"
          class="btn btn-link d-md-none rounded-circle mr-3"
        >
          <i class="fa fa-bars"></i>
        </button>
        <!-- Begin Page Content -->
        <div class="container-fluid">
                  <!--  Start Header -->
                  <div
                  class="d-sm-flex align-items-center justify-content-between mb-4 mt-4"
                >
                  <h1 class="h3 mb-0 text-gray-800">Make an event</h1>
         
                </div>
            <!--End header-->    
            <div class="card-body">
              <div class="table-responsive">
            <table
            class="table table-bordered"
            id="dataTable"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Event name</th>
                <th>Event date/time</th>
                <th>Total bookings</th>
                <th>Generated amount</th>
                <!-- <th>Action</th> -->
              </tr>
            </thead>   <tbody>

            <% events.forEach((i) => { %>
                <%let bookingCounter = 0 %>

                <% bookings.forEach((j) => { %>

              <% if(i._id.toString() === j.eventid ){%>
                    <%bookingCounter ++%>
             <% }%>
                    <% }) %>
              <tr>
                <td><%= i.title %></td>
                <td><%= i.date %><br/> <%= i.time %></td>
                <td><%= bookingCounter %></td>
                <td>$<%= i.fee * bookingCounter  %></td>

                <!-- <td>
                  <a
                    href="/admin/pending/edit/<%=i._id%>"
                    style="color: #fff"
                    class="btn btn-success"
                  >
                    Approve
                  </a>
                </td> -->
              </tr>
              
            <% }) %>
        
        </tbody>
          </table>
        </div>
      </div>

      </div>
      <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
    <%- include('partials/footer.ejs') %>
  </div>
</body>
