<%- include('partials/header.ejs') %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->

    <%- include('partials/side.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Sidebar Toggle (Topbar) -->
        <button
          id="sidebarToggleTop"
          class="btn btn-link d-md-none rounded-circle mr-3"
        >
          <i class="fa fa-bars"></i>
        </button>
        <!-- Begin Page Content -->
        <div class="container-fluid">
                  <!--  Start Header -->
                  <div
                  class="d-sm-flex align-items-center justify-content-between mb-4 mt-4"
                >
                  <h1 class="h3 mb-0 text-gray-800">Make an event</h1>
             
                </div>
            <!--End header-->    
            <div class="card-body">
              <div class="table-responsive">
                <form action="/testimonial"  method="post" enctype="multipart/form-data" style="overflow: hidden;">
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                      <input required type="text" name="firstName"  class="form-control" id="staticEmail" placeholder="Name">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Position</label>
                    <div class="col-sm-10">
                      <input required type="text" name="position"  class="form-control" id="staticEmail" placeholder="Position">
                    </div>
                  </div>
                  <div class="form-group row">
                      <label for="staticEmail" class="col-sm-2 col-form-label">Comment</label>
                      <div class="col-sm-10">
                        <textarea required type="text" name="comment"  class="form-control" id="staticEmail" placeholder="Comment"></textarea>
                      </div>
                    </div>
                    <div class="form-group row">
                      <label for="staticEmail" class="col-sm-2 col-form-label">Pic</label>
                      <div class="col-sm-10">
                        <input required type="file" name="pic" accept="image/jpeg, image/jpg,"  class="form-control" id="staticEmail" placeholder="Comment"></input>
                      </div>
                    </div>

                  </div>

                  <div class="form-group row">
                  <button type="submit" class="btn btn-success">Submit</button>
                  </div>
                  
                </form>
        </div>
      </div>

      </div>
      <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
    <%- include('partials/footer.ejs') %>
  </div>
</body>
