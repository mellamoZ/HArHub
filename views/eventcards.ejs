  <!--====== UPPCOMING EVENTS PART START ======-->
  
  <section class="upcoming-events-area events-page">
      <div class="container">
          <div class="row">
              <div class="col-lg-12">
                  <div class="upcoming-events-item">
                    <% events.forEach(i=>{%> <% let newDate = new Date(i.date) %> <%let currentDay
                      = newDate.getDay()%> <% let months = ['January', 'February', 'March', 'April',
                      'May', 'June', 'July', 'August', 'September', 'October', 'November',
                      'December'];%>

                      <%let cutted = i.body.substring(0, 100)%>
                    
                      <div class="item mt-20">
                          <div class="row align-items-center">
                              <div class="col-lg-9">
                                  <div class="upcoming-events-content d-block d-md-flex align-items-center">
                                      <div class="thumb">
                                          <img src="assets<%=i.pic%>" style="width:130px; height:128px;" alt="">
                                          <div class="date">
                                              <span><%=currentDay%> <%=months[newDate.getMonth()]%></span>
                                          </div>
                                      </div>
                                      <div class="content ml-65">
                                          <ul>
                                              <li><i class="fa fa-clock-o"></i> <%=i.time%> </li>
                                              <li><i class="fa fa-user-o"></i> Admin </li>
                                          </ul>
                                          <h4 class="title"><%=i.title%></h4>
                                          <p><%=cutted%>...</p>
                                      </div>
                                  </div>
                              </div>
                              <div class="col-lg-3">
                                  <div class="events-btn text-left text-lg-right">
                                      <a class="main-btn main-btn-2" href="eventbooking/<%=i._id%>">Join event</a>
                                  </div>
                              </div>
                          </div>
                      </div>
                    
                      <%})%>
                            
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </section>
  
