<%- include('partials/header.ejs') %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->

    <%- include('partials/side.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Sidebar Toggle (Topbar) -->
        <button
          id="sidebarToggleTop"
          class="btn btn-link d-md-none rounded-circle mr-3"
        >
          <i class="fa fa-bars"></i>
        </button>
        <!-- Begin Page Content -->
        <div class="container-fluid">
                  <!--  Start Header -->
                  <div
                  class="d-sm-flex align-items-center justify-content-between mb-4 mt-4"
                >
                  <h1 class="h3 mb-0 text-gray-800">Make an event</h1>
           
                </div>
            <!--End header-->    

            <form action="/blog" method="post" enctype="multipart/form-data">
              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Blog header</label>
                <div class="col-sm-10">
                  <input required type="text" name="blogName"  class="form-control" id="staticEmail" placeholder="blogname">
                </div>
              </div>
           



                <div class="form-group row">
                  <label for="inputPassword" class="col-sm-2 col-form-label">category</label>
                  <div class="col-sm-10">
                    <select required name="category" class="form-control" id="inputPassword" placeholder="Description"> 
                      <% categories.forEach((i) => { %>
                        <option  value="<%=i.categoryName%>"><%=i.categoryName%></option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="form-group row">
                  <label for="inputPassword" class="col-sm-2 col-form-label">Image</label>
                  <div class="col-sm-10">
                    <input required name="pic" accept="image/jpeg, image/jpg," type="file" class="form-control" id="inputPassword" placeholder="Pictures">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                    <textarea required name="description" type="text" class="form-control" id="inputtext" placeholder="Description"></textarea>
                  </div>
                </div>
           

                <div class="form-group row">
                  <button type="submit" class="btn btn-success">Publish</button>
                  </div>
            </form>
      </div>
      <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
    <%- include('partials/footer.ejs') %>
  </div>
</body>
