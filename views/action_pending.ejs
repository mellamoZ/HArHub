<%- include('partials/header.ejs') %>
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar -->

    <%- include('partials/side.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Sidebar Toggle (Topbar) -->
        <button
          id="sidebarToggleTop"
          class="btn btn-link d-md-none rounded-circle mr-3"
        >
          <i class="fa fa-bars"></i>
        </button>
        <!-- Begin Page Content -->
        <div class="container-fluid">
                  <!--  Start Header -->
                  <div
                  class="d-sm-flex align-items-center justify-content-between mb-4 mt-4"
                >
                  <h1 class="h3 mb-0 text-gray-800">Make an event</h1>
           
                </div>
            <!--End header-->    
            <form action="/admin/pending/action" method="post">
              <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label"><%=fullName%>'s booked event is: </label>
                <div class="col-sm-10">
                  <select required name="action" class="form-control" id="inputPassword" placeholder="Description"> 
                        <option  value="Approved">Approved</option>
                        <option  value="Delete">Deleted</option>
                        <option  value="Pending">Pending</option>
                  </select>
                </div>
              </div>

              <div class="form-group row">
              <button type="submit" class="btn btn-success">Submit</button>
              </div>
              
            </form>

      </div>
      <!-- End of Main Content -->
    </div>
    <!-- End of Content Wrapper -->
    <%- include('partials/footer.ejs') %>
  </div>
</body>
